<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    android:id="@+id/card_generated_playlist_id"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    app:cardBackgroundColor="@color/transparent">

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:rowCount="2"
        android:columnCount="3">

        <ImageView
            android:id="@+id/card_generated_playlist_album_cover_id"
            android:src="@drawable/sw"
            android:layout_width="80sp"
            android:layout_height="80sp"
            android:layout_row="0"
            android:layout_column="0"
            android:layout_rowSpan="2"/>

        <ImageView
            android:id="@+id/card_generated_playlist_play_id"
            android:src="@drawable/ic_play_arrow_black_24dp"
            android:layout_gravity="center_vertical"
            android:layout_height="40dp"
            android:layout_width="40dp"
            android:clickable="true"/>

        <TextView
            android:id="@+id/card_generated_playlist_track_name_id"
            android:text="Discard Your Fear"
            android:gravity="center_vertical"
            android:textSize="20sp"
            android:layout_height="40sp"
            android:layout_row="0"
            android:layout_column="2"
            android:layout_marginLeft="10sp"/>

        <TextView
            android:id="@+id/card_generated_playlist_artist_id"
            android:text="Riverside"
            android:gravity="center_vertical"
            android:textSize="15sp"
            android:layout_height="40sp"
            android:layout_row="1"
            android:layout_column="1"
            android:layout_columnSpan="2"
            android:layout_marginLeft="10sp"/>
    </GridLayout>

</androidx.cardview.widget.CardView>